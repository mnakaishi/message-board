<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name,'名前:', class: 'col-sm-1 control-label' %>
    <div class="col-sm-11">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <br />
  <br />

  <div class="form-group">
    <%= f.label :body,'年齢:', class: 'col-sm-1 control-label' %>
    <div class="col-sm-11">
    <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <br /> 
  <br />

  <div class="form-group ">
    <%= f.label :body,'内容:', class: 'col-sm-1 control-label' %>
    <div class="col-sm-11">
      <%= f.text_area :content, class: 'form-control' , rows: 10 %>
    </div>
  </div>
  <br />
  <br /> 

  <div class=col-sm-1></div>
  <div class="col-sm-11">
    <div class="form-actions">
    <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
    <% end %>
<% end %>
